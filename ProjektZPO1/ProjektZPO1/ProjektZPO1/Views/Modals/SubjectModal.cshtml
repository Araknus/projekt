@model ProjektZPO1.Models.Subject
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<body>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Dodaj przedmiot</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateSubject", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ClassRoom.Name, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.IdClassRoom, new SelectList(ViewBag.ClassRoomsVB, "Id", "Name"),
                           new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Dodaj" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
